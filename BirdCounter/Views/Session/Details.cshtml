@model CountingSession

@{
    ViewData["Title"] = "Counting Session Details";
}

<h2>Counting Session Details</h2>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Start)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Start)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.End)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.End)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Location)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Location)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.User.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.User.Name)
    </dd>
</dl>

<h4>Bird Counts</h4>
<hr />
<table class="table table-striped">
    <thead>
        <tr>
            <th>Bird Name</th>
            <th>Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var count in Model.BirdCounts)
        {
            var birds = ViewBag.Birds as List<Bird>;
            var bird = birds.Find(b => b.Id == count.Bird_id);
            <tr>
                <td>@bird.Name</td>
                <td>@count.Count</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>